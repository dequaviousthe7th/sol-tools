# HTML pages: never cache, always fetch fresh from origin
/*.html
  Cache-Control: no-cache, no-store, must-revalidate

/
  Cache-Control: no-cache, no-store, must-revalidate

/reclaim
  Cache-Control: no-cache, no-store, must-revalidate

/vanity
  Cache-Control: no-cache, no-store, must-revalidate

/stats
  Cache-Control: no-cache, no-store, must-revalidate

/hackathon
  Cache-Control: no-cache, no-store, must-revalidate

/d/*
  Cache-Control: no-cache, no-store, must-revalidate

# Hashed static assets: cache forever (filenames change on each build)
/_next/static/*
  Cache-Control: public, max-age=31536000, immutable
